{
  "name": "proofoflove",
  "version": "0.1.0",
  "private": true,
  "description": "Zero-knowledge proof system for verifying crypto wealth tiers in a dating app",
  "scripts": {
    "setup": "pnpm install && pnpm run build:circuits",
    "build": "pnpm -r --filter=!circuits --stream build",
    "build:circuits": "cd packages/circuits && chmod +x scripts/*.sh && ./scripts/compile.sh && ./scripts/setup.sh",
    "test": "pnpm -r --stream test",
    "test:circuits": "cd packages/circuits && npm test",
    "demo:cli": "cd packages/demo && npm run cli",
    "demo:web": "cd packages/demo && npm run dev",
    "clean": "pnpm -r exec rm -rf dist build node_modules && rm -rf node_modules",
    "lint": "pnpm -r --stream lint"
  },
  "devDependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@solana/web3.js": "^1.98.4",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.33",
    "chai": "^4.5.0",
    "mocha": "^10.8.2",
    "snarkjs": "^0.7.6",
    "ts-mocha": "^11.1.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
